
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are insecure and are for development purposes only.
    // They allow anyone to read and write to your entire database.
    // Before deploying to production, you MUST secure these rules.
    // For example, by using: allow read, write: if request.auth != null;
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
